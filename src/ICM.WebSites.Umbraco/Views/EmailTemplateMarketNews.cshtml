    var marketNewsModel = await Mediator.Send(CreateMarketNewsQuery(Context));
}

@functions{
    private GetMarketNewsQuery CreateMarketNewsQuery(Microsoft.AspNetCore.Http.HttpContext context)
    {
        if (!DateOnly.TryParseExact(Context.Request.Query["date"], "yyyyMMdd", out var date))
        {
            date = DateOnly.FromDateTime(TimeProvider.GetUtcNow().Date);
        }
        
        if (!Enum.TryParse<PartsOfDay>(Context.Request.Query["date"], out var partOfDay))
        {
            partOfDay = PartsOfDay.Morning;
        }

        return new GetMarketNewsQuery
        {
            Culture = Model.GetCultureFromDomains() ?? "en",
            Date = date,
            PartOfDay = partOfDay
        };
    }
}

